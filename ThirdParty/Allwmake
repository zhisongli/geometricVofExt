#!/bin/sh
cd "${0%/*}" || exit                                # Run from this directory
# Run from $WM_PROJECT_USER_DIR/modules/geometricVofExt/ThirdParty directory only
wmake -check-dir "$WM_PROJECT_USER_DIR/modules/geometricVofExt/ThirdParty" 2>/dev/null || {
    echo "Error (${0##*/}) : not located in \$WM_PROJECT_USER_DIR/modules/geometricVofExt/ThirdParty"
    echo "    Check your OpenFOAM environment and installation"
    exit 1
}

. ${WM_PROJECT_DIR:?}/wmake/scripts/AllwmakeParseArguments # (error catching)
#------------------------------------------------------------------------------

echo " >> Compile ThirdParty libraries"

echo -n "    >> "
wmake libso TwoPhaseFlow

echo " >> Done"
echo

#------------------------------------------------------------------------------
